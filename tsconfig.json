{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "inlineSourceMap": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "declaration": true
    },
    "include": ["*.ts", "examples/*.ts", "test/*.ts"]
}
